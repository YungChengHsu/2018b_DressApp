<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:backgroundTint="@color/white">
    <!--app:cardCornerRadius="20dp">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/menuItemPic"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/common_google_signin_btn_icon_light" />
            <!--android:scaleType="centerCrop"-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/menuOwnerPic"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/default_profile_pic"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/menuItemName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Clothes Name"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/menuOwnerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Owner Name"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:textColor="@color/filter_grey"
                        android:layout_gravity="center_vertical"/>

                    <FrameLayout
                        android:background="#bababa"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"/>

                        <TextView
                            android:id="@+id/menuOwnerLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="location"
                            android:textAlignment="center"
                            android:textColor="@color/filter_grey"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>